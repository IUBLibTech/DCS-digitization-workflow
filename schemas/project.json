{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dlib.indiana.edu/dcs/schemas/project",
    "title": "DCS Digitization Workflow Schema",
    "description": "Digitization Workflow schema for objects scanned by DCS",
    "type": "object",
    "required": [
        "version",
        "project_information",
        "descriptive_metadata"
    ],
    "properties": {
        "version": {
            "const": "dcs-digitization-workflow-metadata@v1",
            "description": "Digitization Workflow schema version"
        },
        "project_information": {
            "title": "Project Information",
            "description": "Information about the project to digitize this object",
            "additionalProperties": false,
            "required": ["creator", "create_date", "completion_date", "contacts", "notes"],
            "properties": {
                "creator": {
                    "title": "Project Creator",
                    "description": "User that created the project",
                    "type": "string"
                },
                "create_date": {
                    "title": "Request Date",
                    "description": "Date the digitization was requested",
                    "type": "string",
                    "format": "date"
                },
                "completion_date": {
                    "title": "Completion date",
                    "description": "Date the digitization was completed",
                    "type": "string",
                    "format": "date"
                },
                "contacts": {
                    "title": "Project Contacts",
                    "description": "How to contact the owners",
                    "type": "array",
                    "minContains": 1,
                    "items": {
                        "title": "Contact Information",
                        "description": "owner contact",
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["name", "email"],
                        "properties": {
                            "name": {
                                "title": "Contact Name",
                                "description": "Contact name",
                                "type": "string"
                            },
                            "email": {
                                "title": "Contact Email",
                                "description": "email address",
                                "type": "string",
                                "format": "email"
                            }
                        }
                    }
                },
                "notes": {
                    "title": "Project Notes",
                    "description": "Notes about the project",
                    "type": "string",
                    "default": "No Notes"
                }
            }
        },
        "descriptive_metadata": {
            "description": "Descriptive Metadata",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "title",
                "identifiers"
            ],
            "properties": {
                "title": {
                    "description": "Work Title",
                    "type": "string"
                },
                "identifiers": {
                    "description": "Identifiers for this work",
                    "required": ["iucat_barcode", "iucat_catkey", "call_number"],
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "iucat_barcode": {
                            "type": ["string", "null"],
                            "description": "IUcat Barcode",
                            "default": "null"
                        },
                        "iucat_catkey": {
                            "type": ["string", "null"],
                            "description": "Catalog Key",
                            "default": "null"
                        },
                        "call_number": {
                            "type": ["string", "null"],
                            "description": "Call Number",
                            "default": "null"
                        },
                        "other_identifiers": {
                            "title": "Other Identifiers",
                            "description": "Other identifiers for the intellectual object",
                            "type": "array",
                            "minContains": 1,
                            "items": {
                                "title": "Additional Identifier",
                                "type": "object",
                                "additionalProperties": false,
                                "required": [
                                    "scope",
                                    "identifier"
                                ],
                                "properties": {
                                    "scope": {
                                        "type": "string",
                                        "description": "Scope for the identifier"
                                    },
                                    "identifier": {
                                        "type": "string",
                                        "description": "Local Identifier"
                                    }
                                }
                            }
                        }
                    }
                    
                }
            }
        }

    }

}