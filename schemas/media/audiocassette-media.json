{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dlib.indiana.edu/dcs/schemas/media/audiocassette-media",
    
    "title": "Audiocassette",
    "description": "Audiocassette",
    "type": "object",
    "additionalProperties": false,
    "required": ["label", "id", "media_type", "cassette_type", "tape_type", "tape_stock_brand", "format_duration",
                "conservation_concerns", "notes"],
    "properties": {
        "media_type": {
            "title": "Media Type",
            "description": "Media Type",
            "const": "audiocassette"
        },
        "label": {
            "title": "Tape Label",
            "description": "Label identifying the tape",
            "type": "string",
            "default": "no label"
        },
        "id": {
            "title":  "Identifier",
            "description": "Identifier (such as a barcode) for the object",
            "type": "string",
            "default": "no identifier"
        },
        "cassette_type": {
            "title": "Type of cassette",
            "description": "Type of cassette",
            "type": "string",
            "enum": ["Compact", "Micro", "Mini"],
            "default": "Compact"
        },

        "tape_type": {
            "title": "Type of tape",
            "description": "Type of tape",
            "type": "string",
            "enum": ["Unknown", "I", "II", "III", "IV"],
            "default": "Unknown"

        },
        "tape_stock_brand": {
            "title": "Tape stock brand",
            "description": "Tape stock brand",
            "type": "string"
        },

        "format_duration": {
            "title": "Format duration",
            "description": "Format Duration",
            "type": "string"
        },
        "conservation_concerns": {
            "title": "Conservation Concerns",
            "description": "Media evaluation and remediations",
            "type": "object",
            "additionalProperties": false,
            "required": ["pack_deformation", "damaged_tape", "damaged_shell", "fungus", "soft_binder_syndrome", "other_contaminants",
                        "remediation_notes"],
            "properties": {
                "pack_deformation": {
                    "title": "Pack deformation",
                    "description": "Type of cassette",
                    "type": "string",
                    "enum": ["None", "Minor", "Moderate", "Severe"],
                    "default": "None"
                },
                "damaged_tape": {
                    "title": "Tape damaged",
                    "description": "the tape is damaged",
                    "type": "boolean",
                    "default": "false"
                },
                "damaged_shell": {
                    "title": "Shell damaged",
                    "description": "the tape shell is damaged",
                    "type": "boolean",
                    "default": "false"
                },
                "fungus": {
                    "title": "Fungus",
                    "description": "the tape has a fungus",
                    "type": "boolean",
                    "default": "false"
                },
                "soft_binder_syndrome": {
                    "title": "Soft binder syndrome",
                    "description": "the tape has a soft binder",
                    "type": "boolean",
                    "default": "false"
                },
                "other_contaminants": {
                    "title": "Other Contaminants",
                    "description": "the tape has other contaminants",
                    "type": "boolean",
                    "default": "false"
                },
                "remediation_notes": {
                    "title": "Remediation Notes",
                    "description": "Notes and actions for remediation of concerns",
                    "type": "string",
                    "default": "No Remediation"
                }
            }
        },
        "notes": {
            "title": "Physical object notes",
            "description": "Notes about the physical object",
            "type": "string",
            "default": "no notes"
        }
    }
}       
