{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dlib.indiana.edu/dwim/schemas/media/open_reel_audio-sequence@v1",
    "title": "DWIM Open Reel Audio Digitization Sequence",
    "description": "Capture / Playback details for an individual capture",
    "type": "object",
    "additionalProperties": false,
    "required": ["system", "label", "tape_speed", "track_configuration", "signal_chain", "sound_field", 
                 "reference_fluxivity", "gain", "output_voltage", "peak_dbfs", "comments"],
    "properties": {
        "system": {
            "title": "System Information",
            "type": "object",
            "required": ["schema_id", "profile", "project_id", "physical_object_id", "sequence_id"],
            "properties": {    
                "schema_id": {
                    "const": "media/open_reel_audio-sequence@v1"
                },        
                "profile": {
                    "title": "Profile name",
                    "type": "string"
                },
                "project_id": {
                    "title": "Project ID",
                    "description": "The unique ID that represents this project",
                    "type": "string"
                },
                "physical_object_id": {
                    "title": "Physical Object ID",
                    "description": "The ID for the physical object that this describes",
                    "type": "string"
                },
                "sequence_id": {
                    "title": "Sequence ID",
                    "description": "The sequence number",
                    "type": "string"
                }
            }
        },

        "label": {
            "title": "Label",
            "description": "Label information to identify the part of the media being digitized",
            "type": "string",
            "default": "n/a"
        },

        "tape_speed": {
            "title": "Tape Speed",
            "description": "Recording speed used in inches per second",
            "type": "array",
            "minContains": 1,
            "items": {
                "enum": ["7.5 ips", "3.75 ips", "1.875 ips", "0.9375 ips", "0.46875 ips", "unknown"]
            },
            "default": ["3.5 ips"]
        },
        "signal_chain": {
            "title": "Signal Chain",
            "description": "Information about the equipment used to capture the media",
            "const": "TBD"
        },
        "sound_field": {
            "title": "Sound Field",
            "description": "What kind of sound field was captured",
            "enum": ["stereo", "mono"],
            "default": "stereo"
        },


        "reference_fluxivity": {
            "title": "Reference Fluxivity",
            "type": "string",
            "default": "n/a"
        },
        "gain": {
            "title": "Gain",
            "type": "string",
            "default": "n/a"
        },
        "output_voltage": {
            "title": "Output Voltage",
            "type": "string",
            "default": "n/a"
        },
        "peak_dbfs": {
            "title": "Peak dBfs",
            "type": "string",
            "default": "n/a"
        },

        "comments": {
            "title": "Digitization Notes",
            "description": "Comments about anything strange or abnormal about the content",
            "type": "string",
            "default": "no comment"
        }
    }
}
