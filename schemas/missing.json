{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dlib.indiana.edu/dcs/schemas/missing",
    "missing": {
        "title": "Missing Object",
        "description": "Placeholder for a missing object",
        "type": "object",
        "additionalProperties": false,
        "required": ["media_type", "notes"],
        "properties": {
            "media_type": {
                "title": "Media Type",
                "description": "Media Type",
                "const": "Missing"            
            },
            "notes": {
                "title": "Notes",
                "description": "Notes  about the missing object",
                "type": "string",
                "default": "This object is missing"
            }
        }
    }
}