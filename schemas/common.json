{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dlib.indiana.edu/dcs/schemas/common",
    "title": "Common schema things",


    "scale": {
        "type": "integer",
        "minimum": 0,
        "maximum": 4, 
        "default": 0
    },

    "sound_field": {
        "title": "Sound Field",
        "description": "Sound Field",
        "type": "string",
        "enum": ["mono", "stereo", "dual mono", "unknown"]
    },

    "duration": {
        "title": "Media Duration",
        "description": "Duration of media in hh:mm:ss format",
        "type": "string",
        "pattern": "^([0-9]{1,2}:){0,2}[0-9]{2}"
    },

    "position": {
        "title": "Position",
        "description": "Position of the object in the viewing/listening experience",
        "type": "integer",
        "minimum": 1,
        "default": 1
    },
    "sequence_base": {
        "title": "Sequence",
        "description": "Sequence base fields",
        "type": "object",
        "required": ["operator", "physical_id", "duration"],
        "properties": {
            "operator": {
                "title": "Operator ID",
                "description": "The operator doing the digitization",
                "type": "string"
            },
            "physical_id": {
                "title": "Physical ID",
                "description": "Physical identifier for the sequence, such as side number",
                "type": "string"
            },
            "time_offset": {
                "$ref": "#/duration",
                "title": "Time Offset",
                "description": "The time offset where this sequence starts for the physical ID"                
            },
            "duration": {
                "$ref": "#/duration"
            },
            "notes": {
                "title": "Notes",
                "description": "Notes about the digitization"
            }
        }
    }

}