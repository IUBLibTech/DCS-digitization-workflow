{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dlib.indiana.edu/dwim/schemas/media/umatic-sequence@v1",
    "title": "DWIM U-matic Digitization Sequence",
    "description": "Capture / Playback details for an individual capture",
    "type": "object",
    "additionalProperties": false,
    "required": ["system", "label", "recording_standard", "image_format", "format_version", "signal_chain", "sound_field", "comments"],
    "properties": {
        "system": {
            "title": "System Information",
            "$ref": "common.json#/system_information",
            "properties": {
                "schema_id": {
                    "const": "media/betacam-sequence@v1"
                }
            }
        },
        "label": {
            "title": "Label",
            "description": "Label information to identify the part of the media being digitized",
            "type": "string",
            "default": "n/a"
        },

        "recording_standard": {
            "title": "Recording Standard",
            "enum": ["NTSC", "PAL", "SECAM"],
            "default": "NTSC"
        },

        "image_format": {
            "title": "Image Format",
            "description": "Captured image format",
            "enum": ["4:3"],
            "default": "4:3"
        },
        "format_version": {
            "title": "Format Version",
            "enum": ["high band", "low band", "SP"],
            "default": "high band"
        },
        "signal_chain": {
            "title": "Signal Chain",
            "description": "Information about the equipment used to capture the media",
            "const": "TBD"
        },
        "sound_field": {
            "title": "Sound Field",
            "description": "What kind of sound field was captured",
            "enum": ["ch1 only", "ch2 only", "stereo", "mono", "split tracks"],
            "default": "stereo"
        },
        "comments": {
            "title": "Digitization Notes",
            "description": "Comments about anything strange or abnormal about the content",
            "type": "string",
            "default": "no comment"
        }
    }
}
